            <div class="input-field">
              <label>Nama Admin :</label>
              <input
                type="text"
                id="namaInput"
                required
                maxlength="50"
                placeholder="Nama Lengkap"
                name="namaAdmin"
              />
            </div>

            <div class="input-field">
              <label>NIK :</label>
              <input
                type="text"
                maxlength="20"
                required
                placeholder="NIK"
                oninput="restrictToNumbers(this)"
                name="nik"
              />
            </div>

            <div class="input-field">
              <label>Jabatan :</label>
              <input
                type="text"
                id="kadesInput"
                required
                maxlength="50"
                placeholder="Jabatan"
                name="jabatan"
              />
            </div>
            <div class="input-field">
              <label>NO HP :</label>
              <input
                type="text"
                maxlength="20"
                required
                placeholder="0812xxxx"
                oninput="restrictToNumbers(this)"
                name="noHP"
              />
            </div>
            <div class="input-field">
              <label>Nama Kepala Desa :</label>
              <input
                type="text"
                id="namaInput"
                required
